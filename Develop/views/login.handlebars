<div id="login-box">
    <form class="login-form box has-text-centered">
        <figure class="image is-64x64 is-inline-block">
            <img src="/imgs/paper-airplane.png">
        </figure>
        <h1 class="has-text-centered has-text-weight-semibold pb-5"> Welcome to Courier!</h1>

        <div class="field pt-4">
            <p class="control has-icons-left has-icons-right">
                <input id="email-login" class="input" type="email" placeholder="Email">
                <span class="icon is-small is-left">
                    <i class="fa-solid fa-envelope"></i>
                </span>
            </p>
        </div>
        <div class="field pb-2">
            <p class="control has-icons-left">
                <input id="password-login" class="input" type="password" placeholder="Password">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>

        <button type="submit" class="button is-success is-outlined mt-4 mb-3">Log In<i
                class="fa-solid fa-right-to-bracket pl-2"></i></button>
    </form>
    <h2 class="has-text-centered pt-4">Don't have an account? <a href="/signup">Sign up</a> and get started!</h2>

</div>

<script src="./js/login.js"></script>